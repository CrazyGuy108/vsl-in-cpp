#ifndef TOKEN
#define TOKEN(X)
#endif
#ifndef KEYWORD
#define KEYWORD(X, Y) TOKEN(KW_ ## X)
#endif
#ifndef SYMBOL
#define SYMBOL(X, Y) TOKEN(X)
#endif

TOKEN(UNKNOWN)
TOKEN(END)
TOKEN(IDENTIFIER)
TOKEN(NUMBER)

KEYWORD(IF, "if")
KEYWORD(ELSE, "else")
KEYWORD(VAR, "var")
KEYWORD(LET, "let")
KEYWORD(FUNC, "func")
KEYWORD(RETURN, "return")
KEYWORD(TRUE, "true")
KEYWORD(FALSE, "false")
KEYWORD(BOOL, "Bool")
KEYWORD(INT, "Int")
KEYWORD(VOID, "Void")

SYMBOL(PLUS, "+")
SYMBOL(MINUS, "-")
SYMBOL(STAR, "*")
SYMBOL(SLASH, "/")
SYMBOL(PERCENT, "%")
SYMBOL(ASSIGN, "=")
SYMBOL(EQUALS, "==")
SYMBOL(GREATER, ">")
SYMBOL(GREATER_EQUAL, ">=")
SYMBOL(LESS, "<")
SYMBOL(LESS_EQUAL, "<=")
SYMBOL(ARROW, "->")
SYMBOL(LBRACE, "{")
SYMBOL(RBRACE, "}")
SYMBOL(LPAREN, "(")
SYMBOL(RPAREN, ")")
SYMBOL(COMMA, ",")
SYMBOL(COLON, ":")
SYMBOL(SEMICOLON, ";")
