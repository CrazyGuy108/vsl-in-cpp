#ifndef TOKEN
#define TOKEN(kind, name)
#endif
#ifndef KEYWORD
#define KEYWORD(kind, name) TOKEN(KW_ ## kind, name)
#endif
#ifndef SYMBOL
#define SYMBOL(kind, name) TOKEN(kind, name)
#endif

TOKEN(UNKNOWN, "unknown")
TOKEN(END, "eof")
TOKEN(IDENTIFIER, "identifier")
TOKEN(NUMBER, "number")

KEYWORD(PUBLIC, "public")
KEYWORD(PRIVATE, "private")
KEYWORD(FUNC, "func")
KEYWORD(EXTERNAL, "external")
KEYWORD(VAR, "var")
KEYWORD(LET, "let")
KEYWORD(IF, "if")
KEYWORD(ELSE, "else")
KEYWORD(RETURN, "return")
KEYWORD(TRUE, "true")
KEYWORD(FALSE, "false")
KEYWORD(BOOL, "Bool")
KEYWORD(INT, "Int")
KEYWORD(VOID, "Void")

SYMBOL(PLUS, "'+'")
SYMBOL(MINUS, "'-'")
SYMBOL(STAR, "'*'")
SYMBOL(SLASH, "'/'")
SYMBOL(PERCENT, "'%'")
SYMBOL(EQUAL, "'=='")
SYMBOL(NOT_EQUAL, "'!='")
SYMBOL(GREATER, "'>'")
SYMBOL(GREATER_EQUAL, "'>='")
SYMBOL(LESS, "'<'")
SYMBOL(LESS_EQUAL, "'<='")
SYMBOL(NOT, "'!'")
SYMBOL(AND, "'&&'")
SYMBOL(OR, "'||'")
SYMBOL(ASSIGN, "'='")
SYMBOL(QUESTION, "'?'")
SYMBOL(LPAREN, "'('")
SYMBOL(RPAREN, "')'")
SYMBOL(LBRACE, "'{'")
SYMBOL(RBRACE, "'}'")
SYMBOL(ARROW, "'->'")
SYMBOL(COMMA, "','")
SYMBOL(COLON, "':'")
SYMBOL(SEMICOLON, "';'")

#undef TOKEN
#undef KEYWORD
#undef SYMBOL
